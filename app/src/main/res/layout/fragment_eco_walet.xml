<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EcoWaletFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/semibold"
            android:text="@string/eco_wallet"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/semibold"
        android:text="@string/points_earned_by_you"
        android:textColor="@color/accent_orange"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbar" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/coin"
        app:layout_constraintEnd_toStartOf="@+id/points"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/bold"
        android:text="0"
        android:textColor="@color/accent_orange"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/points_history_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/points_history"
        android:textColor="@color/text_black"
        android:textSize="18sp"
        android:fontFamily="@font/semibold"
        android:layout_marginTop="35dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/points"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/points_history_1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28 Feb, 07:33 PM"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:fontFamily="@font/medium"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/points_history_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/points_history_1_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/bold"
        android:text="+ 3"
        android:textColor="@color/accent_orange"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/points_history_1_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/points_history_1_text" />


    <TextView
        android:id="@+id/points_history_2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28 Feb, 06:50 PM"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:fontFamily="@font/medium"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/points_history_1_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/points_history_2_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/bold"
        android:text="+ 4"
        android:textColor="@color/accent_orange"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/points_history_2_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/points_history_2_text" />


    <TextView
        android:id="@+id/points_history_3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28 Feb, 06:40 PM"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:fontFamily="@font/medium"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/points_history_2_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/points_history_3_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/bold"
        android:text="+ 3"
        android:textColor="@color/accent_orange"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/points_history_3_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/points_history_3_text" />




</androidx.constraintlayout.widget.ConstraintLayout>